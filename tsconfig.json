{
    "compilerOptions": {
        "lib": [
            "ES2020",
            "DOM"
        ],
        "module": "CommonJS",
        "target": "ES2020",

        "baseUrl": "./src",
        "rootDir": "./src",
        "outDir": "./dist",
        
        "moduleResolution": "node",
        "esModuleInterop": true,
        "declaration": false,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "removeComments": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "noImplicitAny": true,
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}